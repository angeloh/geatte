<com.geatte.android.view.ThumbnailBitmapItemView
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="?attr/gdThumbnailItemViewStyle"
	android:layout_height="wrap_content"
	android:minHeight="128dp"
	android:paddingLeft="?attr/gdItemViewPreferredPaddingLeft">
	
	<ImageView
		style="?attr/GeatteThumbnailBitmapItemStyleThumbnail"
		android:id="@+id/gd_thumbnail"
		android:scaleType="centerInside" />

	<TextView
		style="?attr/GeatteThumbnailBitmapItemStyleText"
		android:id="@+id/gd_text"
		android:layout_width="fill_parent"
		android:layout_toRightOf="@id/gd_thumbnail"
		android:gravity="bottom"
		android:singleLine="true"
		android:ellipsize="end" />

    <TextView 
        android:id="@+id/desc_label_detail"
        style="?attr/GeatteThumbnailBitmapItemStyleLabel"
        android:layout_width="wrap_content"
		android:layout_toRightOf="@id/gd_thumbnail"
		android:layout_below="@+id/gd_text"
		android:layout_alignLeft="@id/gd_text"
		android:text="@string/desc_label" />

	<TextView
		style="?attr/GeatteThumbnailBitmapItemStyleSubtitle"
		android:id="@+id/gd_subtitle"
		android:layout_width="fill_parent"
		android:layout_toRightOf="@id/gd_thumbnail"
		android:layout_below="@+id/desc_label_detail"
		android:layout_alignLeft="@id/desc_label_detail"
		android:layout_alignParentBottom="true"
		android:gravity="top"
		android:singleLine="true"
		android:ellipsize="end" />

</com.geatte.android.view.ThumbnailBitmapItemView>